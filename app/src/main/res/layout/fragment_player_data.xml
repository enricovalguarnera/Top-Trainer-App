<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingPlayerDataFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_linear_layout_white_rounded"
            android:padding="6dp"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heading_player_data_fragment"
                android:theme="@style/Heading_h1"
                android:layout_marginBottom="12dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/NormalText"
                android:text="@string/info_message_player_data_fragment" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/background_linear_layout_white_rounded"
            android:padding="6dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:theme="@style/Heading_h2"
                android:text="@string/label_edit_text_player_name"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/player_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:inputType="text"
                android:textSize="20dp"
                android:hint="@string/placeholder_edit_text_player_name"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/background_linear_layout_white_rounded"
            android:padding="6dp"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:theme="@style/Heading_h2"
                android:text="@string/label_edit_text_player_age"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/player_age"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:inputType="number"
                android:textSize="20dp"
                android:maxLength="2"
                android:hint="@string/placeholder_edit_text_player_age"
                android:textColor="@color/black"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/roles_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="@drawable/background_linear_layout_white_rounded"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Heading_h2"
                android:layout_gravity="center_vertical"
                android:text="@string/label_select_player_roles"
                android:layout_marginBottom="12dp"/>


            <LinearLayout
                android:id="@+id/roles_first"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp">

                <Button
                    android:id="@+id/button_gk"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:theme="@style/RoleSelectionText"
                    android:backgroundTint="@color/button_background_gk"
                    android:text="@string/gk"
                    android:textColor="@color/text_color_roles"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"/>

                <Button
                    android:id="@+id/button_dc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/dc"
                    android:theme="@style/RoleSelectionText"
                    android:textColor="@color/text_color_roles"
                    android:backgroundTint="@color/button_background_defence"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"/>
                <Button
                    android:id="@+id/button_dr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/dr"
                    android:theme="@style/RoleSelectionText"
                    android:textColor="@color/text_color_roles"
                    android:backgroundTint="@color/button_background_defence"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"/>
                <Button
                    android:id="@+id/button_dl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/dl"
                    android:theme="@style/RoleSelectionText"
                    android:textColor="@color/text_color_roles"
                    android:backgroundTint="@color/button_background_defence"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/roles_second"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp">
                <Button
                    android:id="@+id/button_dmc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/dmc"
                    android:theme="@style/RoleSelectionText"
                    android:textColor="@color/text_color_roles"
                    android:backgroundTint="@color/button_background_midfield"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"/>
                <Button
                    android:id="@+id/button_mc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/mc"
                    android:theme="@style/RoleSelectionText"
                    android:textColor="@color/text_color_roles"
                    android:backgroundTint="@color/button_background_midfield"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"/>
                <Button
                    android:id="@+id/button_mr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/mr"
                    android:theme="@style/RoleSelectionText"
                    android:textColor="@color/text_color_roles"
                    android:backgroundTint="@color/button_background_midfield"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"/>
                <Button
                    android:id="@+id/button_ml"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/ml"
                    android:theme="@style/RoleSelectionText"
                    android:textColor="@color/text_color_roles"
                    android:backgroundTint="@color/button_background_midfield"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/roles_third"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp">
                <Button
                    android:id="@+id/button_amc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/amc"
                    android:theme="@style/RoleSelectionText"
                    android:textColor="@color/text_color_roles"
                    android:backgroundTint="@color/button_background_midfield"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"/>
                <Button
                    android:id="@+id/button_amr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/amr"
                    android:theme="@style/RoleSelectionText"
                    android:textColor="@color/text_color_roles"
                    android:backgroundTint="@color/button_background_midfield"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"/>
                <Button
                    android:id="@+id/button_aml"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/aml"
                    android:theme="@style/RoleSelectionText"
                    android:textColor="@color/text_color_roles"
                    android:backgroundTint="@color/button_background_midfield"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"/>
                <Button
                    android:id="@+id/button_st"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/st"
                    android:theme="@style/RoleSelectionText"
                    android:textColor="@color/text_color_roles"
                    android:backgroundTint="@color/button_background_forward"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>