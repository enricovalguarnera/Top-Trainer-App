<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TopTrainer" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/top_trainer_yellow</item>
        <item name="colorPrimaryVariant">@color/top_trainer_yellow</item>
        <item name="colorOnPrimary">@color/top_trainer_yellow</item>
        Secondary brand color.
        <item name="colorSecondary">@color/top_trainer_green_secondary</item>
        <item name="colorSecondaryVariant">@color/top_trainer_green_secondary</item>
        <item name="colorOnSecondary">@color/top_trainer_green_secondary</item>
        Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TopTrainer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TopTrainer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TopTrainer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>